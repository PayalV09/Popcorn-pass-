<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="10dp">

    <!-- Movie Name TextView -->
    <TextView
        android:id="@+id/text_view_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Name"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <!-- Movie Genre TextView -->
    <TextView
        android:id="@+id/text_view_movie_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Genre"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <!-- Movie Cast TextView -->
    <TextView
        android:id="@+id/text_view_movie_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cast: Actor 1, Actor 2"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <!-- Movie Crew TextView -->
    <TextView
        android:id="@+id/text_view_movie_crew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crew: Director, Writer"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <!-- Movie Language TextView -->
    <TextView
        android:id="@+id/text_view_movie_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language: English"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <!-- Movie Ratings TextView -->
    <TextView
        android:id="@+id/text_view_movie_ratings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ratings: 4.5/5"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

</LinearLayout>
