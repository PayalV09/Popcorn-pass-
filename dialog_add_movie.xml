<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie Name"
        android:minHeight="48dp"
    android:padding="12dp"
    android:importantForAccessibility="yes" />

    <EditText
        android:id="@+id/edit_movie_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Genre"
        android:minHeight="48dp"
    android:padding="12dp"
    android:importantForAccessibility="yes" />

    <EditText
        android:id="@+id/edit_movie_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost"
        android:minHeight="48dp"
    android:padding="12dp"
    android:importantForAccessibility="yes" />

    <EditText
        android:id="@+id/edit_movie_crew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Crew"
        android:minHeight="48dp"
    android:padding="12dp"
    android:importantForAccessibility="yes" />

    <EditText
        android:id="@+id/edit_movie_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Language"
        android:minHeight="48dp"
    android:padding="12dp"
    android:importantForAccessibility="yes" />

    <EditText
        android:id="@+id/edit_movie_ratings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ratings"
        android:minHeight="48dp"
    android:padding="12dp"
    android:importantForAccessibility="yes" />



    <EditText
        android:id="@+id/edit_movie_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie Description"
        android:minHeight="48dp"
        android:padding="12dp"
        android:importantForAccessibility="yes" />


</LinearLayout>
