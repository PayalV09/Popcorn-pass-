<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Title for the login screen -->
    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- Admin ID input field -->
    <EditText
        android:id="@+id/admin_id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Admin ID"
        android:inputType="text"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/admin_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Admin Email"
        android:inputType="text"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#000000"/>


    <!-- Admin Password input field -->
    <EditText
        android:id="@+id/admin_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Admin Password"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#000000"/>


    <!-- Login button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="16sp"
        android:background="@color/black"
        android:textColor="@android:color/white"
        android:padding="12dp" />

</LinearLayout>
